.chrome-tabs.chrome-tabs-dark-theme {
  background: #202124; /* Background color for the tabs */
  
  .chrome-tab {
    .chrome-tab-dividers {
      &::before, &::after {
        background: #4a4d51; /* Divider background color */
      }
    }

    .chrome-tab-background > svg .chrome-tab-geometry {
      fill: #292b2e; /* Star fill color */
    }

    &[active] .chrome-tab-background > svg .chrome-tab-geometry {
      fill: #323639; /* Active tab background color */
    }

    .chrome-tab-title {
      color: #9ca1a7; /* Tab title color */
    }

    &[active] .chrome-tab-title {
      color: #f1f3f4; /* Active tab title color */
    }

    .chrome-tab-close {
      background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'><path stroke='rgba(154, 160, 166, .8)' stroke-linecap='square' stroke-width='1.5' d='M0 0 L8 8 M8 0 L0 8'></path></svg>"); /* Close button image */
    }

    &:hover .chrome-tab-close {
      background-color: #5f6368;
      background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'><path stroke='rgba(255, 255, 255, .7)' stroke-linecap='square' stroke-width='1.5' d='M0 0 L8 8 M8 0 L0 8'></path></svg>"); /* Close button hover effect */
    }

    &:active .chrome-tab-close {
      background-color: #80868b;
      background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'><path stroke='rgba(255, 255, 255, .9)' stroke-linecap='square' stroke-width='1.5' d='M0 0 L8 8 M8 0 L0 8'></path></svg>"); /* Close button active effect */
    }
  }

  .chrome-tabs-bottom-bar {
    background: #323639; /* Bottom bar background color */
  }
}
